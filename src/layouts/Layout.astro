---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
title: string;
description?: string;
}

const { title, description = "用行动赢得尊重 - Alan Hou's blog about coding, AI and technology" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/png" href="/logo-square.png" />
<meta name="description" content={description} />
<meta name="theme-color" content="#53A551" />
<title>{title} | Alan Hou</title>

<!-- Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-79EYH26JW2"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-79EYH26JW2');
</script>

<!-- Prevent flash of wrong theme -->
<script is:inline>
  if (localStorage.getItem('theme') === 'dark' ||
      (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.documentElement.classList.add('dark');
  }
</script>
</head>
<body>
<Header />
<main class="container">
  <slot />
</main>
<Footer />
</body>
</html>
