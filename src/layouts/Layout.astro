---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SearchModal from '../components/SearchModal.astro';
import '../styles/global.css';

interface Props {
title: string;
description?: string;
image?: string;
canonicalURL?: string;
type?: 'article' | 'website';
}

const {
title,
description = "用行动赢得尊重 - Alan Hou's blog about coding, AI and technology",
image = '/logo-square.png',
canonicalURL,
type = 'website',
} = Astro.props;

const siteURL = Astro.site?.toString().replace(/\/$/, '') || 'https://alanhou.org';
const canonical = canonicalURL || new URL(Astro.url.pathname, siteURL).toString();
const ogImage = image.startsWith('http') ? image : `${siteURL}${image}`;
---
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/png" href="/logo-square.png" />
<meta name="description" content={description} />
<meta name="theme-color" content="#53A551" />
<link rel="canonical" href={canonical} />

<!-- Open Graph -->
<meta property="og:title" content={`${title} | Alan Hou`} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:url" content={canonical} />
<meta property="og:type" content={type} />
<meta property="og:site_name" content="Alan Hou" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={`${title} | Alan Hou`} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<title>{title} | Alan Hou</title>

<!-- KaTeX CSS for math rendering -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">

<!-- Mermaid for diagrams -->
<script type="module">
  import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
  mermaid.initialize({ startOnLoad: true, theme: 'neutral' });
</script>

<!-- Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-79EYH26JW2"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-79EYH26JW2');
</script>

<!-- Google AdSense -->
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2619697991333815" crossorigin="anonymous"></script>

<!-- Prevent flash of wrong theme -->
<script is:inline>
  if (localStorage.getItem('theme') === 'dark' ||
      (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.documentElement.classList.add('dark');
  }
</script>
</head>
<body>
<Header />
<SearchModal />
<main class="container">
  <slot />
</main>
<Footer />
<script data-goatcounter="https://alanhou.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
</body>
</html>
