---
import Layout from '../../layouts/Layout.astro';
---
<Layout title="Password Generator / 密码生成器">
  <div class="tool-page">
    <h1>Password Generator</h1>
    <p class="subtitle">Generate secure random passwords / 生成安全随机密码</p>

    <div class="tool-container">
      <div class="output-section">
        <input type="text" id="password" readonly placeholder="Click Generate">
        <button id="copy-btn" title="Copy to clipboard"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg></button>
      </div>

      <div class="options">
        <div class="option">
          <label for="length">Length: <span id="length-value">16</span></label>
          <input type="range" id="length" min="8" max="64" value="16">
        </div>

        <div class="checkboxes">
          <label><input type="checkbox" id="uppercase" checked> Uppercase (A-Z)</label>
          <label><input type="checkbox" id="lowercase" checked> Lowercase (a-z)</label>
          <label><input type="checkbox" id="numbers" checked> Numbers (0-9)</label>
          <label><input type="checkbox" id="symbols" checked> Symbols (!@#$...)</label>
        </div>

        <div class="exclude-option">
          <label><input type="checkbox" id="exclude-toggle"> Exclude ambiguous characters / 排除易混淆字符</label>
          <input type="text" id="exclude-chars" value="iIl1o0O" disabled placeholder="Characters to exclude">
        </div>
      </div>

      <button id="generate-btn" class="primary-btn">Generate Password</button>

      <div class="strength-meter">
        <div class="strength-bar" id="strength-bar"></div>
        <span id="strength-text">-</span>
      </div>

      <div class="history-section">
        <div class="history-header">
          <span>History / 历史记录</span>
          <button id="clear-history-btn" title="Clear history">Clear</button>
        </div>
        <div id="history-list" class="history-list"></div>
      </div>
    </div>
  </div>
</Layout>

<style>
.tool-page {
  max-width: 600px;
  margin: 0 auto;
  padding: 2rem 0;
}

.subtitle {
  color: var(--text-secondary);
  margin-bottom: 2rem;
}

.tool-container {
  background: var(--bg-secondary);
  padding: 2rem;
  border-radius: 12px;
}

.output-section {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.output-section input {
  flex: 1;
  padding: 1rem;
  font-size: 1.1rem;
  font-family: monospace;
  border: 1px solid var(--border);
  border-radius: 8px;
  background: var(--bg);
  color: var(--text);
}

.output-section button {
  padding: 0.75rem;
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: 8px;
  cursor: pointer;
  color: var(--text);
  transition: background 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.output-section button:hover {
  background: var(--border);
}

.options {
  margin-bottom: 1.5rem;
}

.option {
  margin-bottom: 1rem;
}

.option label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--text-secondary);
}

.option input[type="range"] {
  width: 100%;
  cursor: pointer;
}

.checkboxes {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.75rem;
}

.checkboxes label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  color: var(--text);
}

.checkboxes input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
}

.exclude-option {
  margin-top: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.exclude-option > label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  color: var(--text);
}

.exclude-option > label input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
}

.exclude-option input[type="text"] {
  padding: 0.5rem 0.75rem;
  font-family: monospace;
  font-size: 0.95rem;
  border: 1px solid var(--border);
  border-radius: 6px;
  background: var(--bg);
  color: var(--text);
  letter-spacing: 0.1em;
}

.exclude-option input[type="text"]:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.primary-btn {
  width: 100%;
  padding: 1rem;
  font-size: 1rem;
  font-weight: 600;
  background: var(--primary);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: opacity 0.2s;
}

.primary-btn:hover {
  opacity: 0.9;
}

.strength-meter {
  margin-top: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
}

.strength-bar {
  flex: 1;
  height: 8px;
  background: var(--border);
  border-radius: 4px;
  overflow: hidden;
  position: relative;
}

.strength-bar::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: var(--strength, 0%);
  background: var(--strength-color, var(--border));
  transition: width 0.3s, background 0.3s;
}

#strength-text {
  font-size: 0.85rem;
  color: var(--text-secondary);
  min-width: 80px;
}

@media (max-width: 480px) {
  .checkboxes {
    grid-template-columns: 1fr;
  }
}

.history-section {
  margin-top: 1.5rem;
  border-top: 1px solid var(--border);
  padding-top: 1rem;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.history-header button {
  padding: 0.2rem 0.6rem;
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: 4px;
  cursor: pointer;
  color: var(--text-secondary);
  font-size: 0.8rem;
  transition: background 0.2s;
}

.history-header button:hover {
  background: var(--border);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
  max-height: 200px;
  overflow-y: auto;
}

.history-empty {
  color: var(--text-secondary);
  font-size: 0.85rem;
  text-align: center;
  padding: 0.5rem;
}
</style>

<style is:global>
.history-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.4rem 0.6rem;
  background: var(--bg);
  border-radius: 6px;
  font-family: monospace;
  font-size: 0.85rem;
}

.history-item code {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--text);
}

.history-item .history-time {
  color: var(--text-secondary);
  font-size: 0.75rem;
  font-family: sans-serif;
  white-space: nowrap;
}

.history-item button {
  padding: 0.25rem;
  margin-left: 0.5rem;
  background: transparent;
  border: none;
  cursor: pointer;
  color: var(--text-secondary);
  line-height: 1;
  flex-shrink: 0;
  border-radius: 4px;
  display: flex;
  align-items: center;
}

.history-item button:hover {
  background: var(--border);
  color: var(--text);
}
</style>

<script>
const passwordInput = document.getElementById('password') as HTMLInputElement;
const lengthSlider = document.getElementById('length') as HTMLInputElement;
const lengthValue = document.getElementById('length-value')!;
const generateBtn = document.getElementById('generate-btn')!;
const copyBtn = document.getElementById('copy-btn')!;
const strengthBar = document.getElementById('strength-bar')!;
const strengthText = document.getElementById('strength-text')!;
const historyList = document.getElementById('history-list')!;
const clearHistoryBtn = document.getElementById('clear-history-btn')!;

const HISTORY_KEY = 'pw-gen-history';
const MAX_HISTORY = 20;

const uppercase = document.getElementById('uppercase') as HTMLInputElement;
const lowercase = document.getElementById('lowercase') as HTMLInputElement;
const numbers = document.getElementById('numbers') as HTMLInputElement;
const symbols = document.getElementById('symbols') as HTMLInputElement;
const excludeToggle = document.getElementById('exclude-toggle') as HTMLInputElement;
const excludeChars = document.getElementById('exclude-chars') as HTMLInputElement;

const CHARS = {
  uppercase: 'ABCDEFGHIJKLMNOPQRSTUVWXYZ',
  lowercase: 'abcdefghijklmnopqrstuvwxyz',
  numbers: '0123456789',
  symbols: '!@#$%^&*()_+-=[]{}|;:,.<>?'
};

lengthSlider.addEventListener('input', () => {
  lengthValue.textContent = lengthSlider.value;
});

excludeToggle.addEventListener('change', () => {
  excludeChars.disabled = !excludeToggle.checked;
});

function generatePassword() {
  let charset = '';
  if (uppercase.checked) charset += CHARS.uppercase;
  if (lowercase.checked) charset += CHARS.lowercase;
  if (numbers.checked) charset += CHARS.numbers;
  if (symbols.checked) charset += CHARS.symbols;

  if (excludeToggle.checked && excludeChars.value) {
    const excluded = new Set(excludeChars.value.split(''));
    charset = charset.split('').filter(c => !excluded.has(c)).join('');
  }

  if (!charset) {
    passwordInput.value = 'Select at least one option';
    return;
  }

  const length = parseInt(lengthSlider.value);
  const array = new Uint32Array(length);
  crypto.getRandomValues(array);

  let password = '';
  for (let i = 0; i < length; i++) {
    password += charset[array[i] % charset.length];
  }

  passwordInput.value = password;
  updateStrength(password, charset.length);
}

function getHistory(): { pw: string; time: number }[] {
  try { return JSON.parse(localStorage.getItem(HISTORY_KEY) || '[]'); } catch { return []; }
}

function saveToHistory(pw: string) {
  const history = getHistory();
  history.unshift({ pw, time: Date.now() });
  if (history.length > MAX_HISTORY) history.length = MAX_HISTORY;
  localStorage.setItem(HISTORY_KEY, JSON.stringify(history));
  renderHistory();
}

function renderHistory() {
  const history = getHistory();
  if (!history.length) {
    historyList.innerHTML = '<div class="history-empty">No history yet</div>';
    return;
  }
  historyList.innerHTML = history.map(({ pw, time }) => {
    const t = new Date(time);
    const ts = `${t.toLocaleDateString()} ${t.toLocaleTimeString()}`;
    return `<div class="history-item"><code>${pw.replace(/</g, '&lt;')}</code><button class="history-copy" data-pw="${pw.replace(/"/g, '&quot;')}" title="Copy"><svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg></button><span class="history-time">${ts}</span></div>`;
  }).join('');
  historyList.querySelectorAll('.history-copy').forEach(btn => {
    btn.addEventListener('click', async () => {
      await navigator.clipboard.writeText((btn as HTMLElement).dataset.pw!);
      btn.innerHTML = '✓';
      setTimeout(() => btn.innerHTML = '<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>', 1000);
    });
  });
}

function updateStrength(password: string, charsetSize: number) {
  const entropy = password.length * Math.log2(charsetSize);
  let strength = 0;
  let label = '';
  let color = '';

  if (entropy < 40) {
    strength = 25; label = 'Weak'; color = '#ef4444';
  } else if (entropy < 60) {
    strength = 50; label = 'Fair'; color = '#f59e0b';
  } else if (entropy < 80) {
    strength = 75; label = 'Strong'; color = '#22c55e';
  } else {
    strength = 100; label = 'Very Strong'; color = '#10b981';
  }

  strengthBar.style.setProperty('--strength', `${strength}%`);
  strengthBar.style.setProperty('--strength-color', color);
  strengthText.textContent = label;
  strengthText.style.color = color;
}

generateBtn.addEventListener('click', generatePassword);

const copyIcon = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>';

copyBtn.addEventListener('click', async () => {
  if (passwordInput.value && !passwordInput.value.startsWith('Select')) {
    await navigator.clipboard.writeText(passwordInput.value);
    saveToHistory(passwordInput.value);
    copyBtn.innerHTML = '✓';
    setTimeout(() => copyBtn.innerHTML = copyIcon, 1500);
  }
});

// Generate on load
generatePassword();
renderHistory();

clearHistoryBtn.addEventListener('click', () => {
  localStorage.removeItem(HISTORY_KEY);
  renderHistory();
});
</script>
