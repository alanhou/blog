---
import Layout from '../../layouts/Layout.astro';
---
<Layout title="Password Generator">
  <div class="tool-page">
    <h1>Password Generator</h1>
    <p class="subtitle">Generate secure random passwords / 生成安全随机密码</p>

    <div class="tool-container">
      <div class="output-section">
        <input type="text" id="password" readonly placeholder="Click Generate">
        <button id="copy-btn" title="Copy to clipboard">Copy</button>
      </div>

      <div class="options">
        <div class="option">
          <label for="length">Length: <span id="length-value">16</span></label>
          <input type="range" id="length" min="8" max="64" value="16">
        </div>

        <div class="checkboxes">
          <label><input type="checkbox" id="uppercase" checked> Uppercase (A-Z)</label>
          <label><input type="checkbox" id="lowercase" checked> Lowercase (a-z)</label>
          <label><input type="checkbox" id="numbers" checked> Numbers (0-9)</label>
          <label><input type="checkbox" id="symbols" checked> Symbols (!@#$...)</label>
        </div>
      </div>

      <button id="generate-btn" class="primary-btn">Generate Password</button>

      <div class="strength-meter">
        <div class="strength-bar" id="strength-bar"></div>
        <span id="strength-text">-</span>
      </div>
    </div>
  </div>
</Layout>

<style>
.tool-page {
  max-width: 600px;
  margin: 0 auto;
  padding: 2rem 0;
}

.subtitle {
  color: var(--text-secondary);
  margin-bottom: 2rem;
}

.tool-container {
  background: var(--bg-secondary);
  padding: 2rem;
  border-radius: 12px;
}

.output-section {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.output-section input {
  flex: 1;
  padding: 1rem;
  font-size: 1.1rem;
  font-family: monospace;
  border: 1px solid var(--border);
  border-radius: 8px;
  background: var(--bg);
  color: var(--text);
}

.output-section button {
  padding: 0 1.5rem;
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: 8px;
  cursor: pointer;
  color: var(--text);
  transition: background 0.2s;
}

.output-section button:hover {
  background: var(--border);
}

.options {
  margin-bottom: 1.5rem;
}

.option {
  margin-bottom: 1rem;
}

.option label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--text-secondary);
}

.option input[type="range"] {
  width: 100%;
  cursor: pointer;
}

.checkboxes {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.75rem;
}

.checkboxes label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  color: var(--text);
}

.checkboxes input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
}

.primary-btn {
  width: 100%;
  padding: 1rem;
  font-size: 1rem;
  font-weight: 600;
  background: var(--primary);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: opacity 0.2s;
}

.primary-btn:hover {
  opacity: 0.9;
}

.strength-meter {
  margin-top: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
}

.strength-bar {
  flex: 1;
  height: 8px;
  background: var(--border);
  border-radius: 4px;
  overflow: hidden;
  position: relative;
}

.strength-bar::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: var(--strength, 0%);
  background: var(--strength-color, var(--border));
  transition: width 0.3s, background 0.3s;
}

#strength-text {
  font-size: 0.85rem;
  color: var(--text-secondary);
  min-width: 80px;
}

@media (max-width: 480px) {
  .checkboxes {
    grid-template-columns: 1fr;
  }
}
</style>

<script>
const passwordInput = document.getElementById('password') as HTMLInputElement;
const lengthSlider = document.getElementById('length') as HTMLInputElement;
const lengthValue = document.getElementById('length-value')!;
const generateBtn = document.getElementById('generate-btn')!;
const copyBtn = document.getElementById('copy-btn')!;
const strengthBar = document.getElementById('strength-bar')!;
const strengthText = document.getElementById('strength-text')!;

const uppercase = document.getElementById('uppercase') as HTMLInputElement;
const lowercase = document.getElementById('lowercase') as HTMLInputElement;
const numbers = document.getElementById('numbers') as HTMLInputElement;
const symbols = document.getElementById('symbols') as HTMLInputElement;

const CHARS = {
  uppercase: 'ABCDEFGHIJKLMNOPQRSTUVWXYZ',
  lowercase: 'abcdefghijklmnopqrstuvwxyz',
  numbers: '0123456789',
  symbols: '!@#$%^&*()_+-=[]{}|;:,.<>?'
};

lengthSlider.addEventListener('input', () => {
  lengthValue.textContent = lengthSlider.value;
});

function generatePassword() {
  let charset = '';
  if (uppercase.checked) charset += CHARS.uppercase;
  if (lowercase.checked) charset += CHARS.lowercase;
  if (numbers.checked) charset += CHARS.numbers;
  if (symbols.checked) charset += CHARS.symbols;

  if (!charset) {
    passwordInput.value = 'Select at least one option';
    return;
  }

  const length = parseInt(lengthSlider.value);
  const array = new Uint32Array(length);
  crypto.getRandomValues(array);

  let password = '';
  for (let i = 0; i < length; i++) {
    password += charset[array[i] % charset.length];
  }

  passwordInput.value = password;
  updateStrength(password, charset.length);
}

function updateStrength(password: string, charsetSize: number) {
  const entropy = password.length * Math.log2(charsetSize);
  let strength = 0;
  let label = '';
  let color = '';

  if (entropy < 40) {
    strength = 25; label = 'Weak'; color = '#ef4444';
  } else if (entropy < 60) {
    strength = 50; label = 'Fair'; color = '#f59e0b';
  } else if (entropy < 80) {
    strength = 75; label = 'Strong'; color = '#22c55e';
  } else {
    strength = 100; label = 'Very Strong'; color = '#10b981';
  }

  strengthBar.style.setProperty('--strength', `${strength}%`);
  strengthBar.style.setProperty('--strength-color', color);
  strengthText.textContent = label;
  strengthText.style.color = color;
}

generateBtn.addEventListener('click', generatePassword);

copyBtn.addEventListener('click', async () => {
  if (passwordInput.value && !passwordInput.value.startsWith('Select')) {
    await navigator.clipboard.writeText(passwordInput.value);
    copyBtn.textContent = 'Copied!';
    setTimeout(() => copyBtn.textContent = 'Copy', 1500);
  }
});

// Generate on load
generatePassword();
</script>
