---
import Layout from '../../layouts/Layout.astro';
---
<Layout title="Unix Time Converter / Unix时间戳转换">
  <div class="tool-page">
    <h1>Unix Time Converter</h1>
    <p class="subtitle">Convert between Unix timestamps and human-readable dates / Unix时间戳与日期互转</p>

    <div class="tool-container">
      <div class="current-time">
        <span>Current Unix Time / 当前时间戳:</span>
        <code id="current-ts"></code>
        <button id="copy-current-btn" class="copy-btn" title="Copy">Copy</button>
      </div>

      <div class="section">
        <h2>Timestamp → Date / 时间戳 → 日期</h2>
        <div class="input-row">
          <input type="text" id="ts-input" placeholder="Enter Unix timestamp">
          <select id="ts-unit">
            <option value="s">Seconds / 秒</option>
            <option value="ms">Milliseconds / 毫秒</option>
          </select>
          <button id="ts-to-date-btn" class="primary-btn">Convert</button>
        </div>
        <div id="ts-result" class="result" hidden>
          <div class="result-row"><span>Local:</span><code id="ts-local"></code><button class="copy-btn" data-target="ts-local">Copy</button></div>
          <div class="result-row"><span>UTC:</span><code id="ts-utc"></code><button class="copy-btn" data-target="ts-utc">Copy</button></div>
          <div class="result-row"><span>ISO 8601:</span><code id="ts-iso"></code><button class="copy-btn" data-target="ts-iso">Copy</button></div>
        </div>
      </div>

      <div class="section">
        <h2>Date → Timestamp / 日期 → 时间戳</h2>
        <div class="input-row">
          <input type="datetime-local" id="date-input" step="1">
          <button id="date-to-ts-btn" class="primary-btn">Convert</button>
        </div>
        <div id="date-result" class="result" hidden>
          <div class="result-row"><span>Seconds:</span><code id="date-seconds"></code><button class="copy-btn" data-target="date-seconds">Copy</button></div>
          <div class="result-row"><span>Milliseconds:</span><code id="date-ms"></code><button class="copy-btn" data-target="date-ms">Copy</button></div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
.tool-page {
  max-width: 700px;
  margin: 0 auto;
  padding: 2rem 0;
}

.subtitle {
  color: var(--text-secondary);
  margin-bottom: 2rem;
}

.tool-container {
  background: var(--bg-secondary);
  padding: 2rem;
  border-radius: 12px;
}

.current-time {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  background: var(--bg);
  border-radius: 8px;
  margin-bottom: 2rem;
  color: var(--text-secondary);
}

.current-time code {
  font-size: 1.1rem;
  color: var(--primary);
  font-weight: 600;
  flex: 1;
}

.copy-btn {
  padding: 0.2rem 0.6rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border);
  border-radius: 4px;
  cursor: pointer;
  color: var(--text-secondary);
  font-size: 0.8rem;
  transition: background 0.2s;
  white-space: nowrap;
}

.copy-btn:hover {
  background: var(--border);
}

.section {
  margin-bottom: 2rem;
}

.section:last-child {
  margin-bottom: 0;
}

.section h2 {
  font-size: 1rem;
  color: var(--text);
  margin-bottom: 0.75rem;
}

.input-row {
  display: flex;
  gap: 0.5rem;
}

.input-row input, .input-row select {
  padding: 0.75rem;
  font-size: 0.95rem;
  border: 1px solid var(--border);
  border-radius: 8px;
  background: var(--bg);
  color: var(--text);
}

.input-row input[type="text"] {
  flex: 1;
  font-family: monospace;
}

.input-row input[type="datetime-local"] {
  flex: 1;
}

.input-row select {
  cursor: pointer;
}

.primary-btn {
  padding: 0.75rem 1.25rem;
  font-size: 0.95rem;
  font-weight: 600;
  background: var(--primary);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: opacity 0.2s;
  white-space: nowrap;
}

.primary-btn:hover {
  opacity: 0.9;
}

.result {
  margin-top: 1rem;
  padding: 1rem;
  background: var(--bg);
  border-radius: 8px;
}

.result-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.4rem 0;
}

.result-row span {
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.result-row code {
  font-size: 0.9rem;
  color: var(--text);
  flex: 1;
  text-align: right;
  margin: 0 0.75rem;
}

@media (max-width: 480px) {
  .input-row {
    flex-direction: column;
  }
}
</style>

<script is:inline>
const currentTs = document.getElementById('current-ts');
const copyCurrentBtn = document.getElementById('copy-current-btn');
const tsInput = document.getElementById('ts-input');
const tsUnit = document.getElementById('ts-unit');
const tsToDateBtn = document.getElementById('ts-to-date-btn');
const tsResult = document.getElementById('ts-result');
const tsLocal = document.getElementById('ts-local');
const tsUtc = document.getElementById('ts-utc');
const tsIso = document.getElementById('ts-iso');

const dateInput = document.getElementById('date-input');
const dateToTsBtn = document.getElementById('date-to-ts-btn');
const dateResult = document.getElementById('date-result');
const dateSeconds = document.getElementById('date-seconds');
const dateMs = document.getElementById('date-ms');

// Live current timestamp
function updateCurrent() {
  currentTs.textContent = Math.floor(Date.now() / 1000).toString();
}
updateCurrent();
setInterval(updateCurrent, 1000);

// Set default date input to now
const now = new Date();
const pad = (n) => n.toString().padStart(2, '0');
dateInput.value = `${now.getFullYear()}-${pad(now.getMonth() + 1)}-${pad(now.getDate())}T${pad(now.getHours())}:${pad(now.getMinutes())}:${pad(now.getSeconds())}`;

// Timestamp → Date
tsToDateBtn.addEventListener('click', () => {
  const raw = tsInput.value.trim();
  if (!raw || isNaN(Number(raw))) return;
  let ms = parseInt(raw);
  if (tsUnit.value === 's') ms *= 1000;
  const d = new Date(ms);
  if (isNaN(d.getTime())) return;
  tsLocal.textContent = d.toLocaleString();
  tsUtc.textContent = d.toUTCString();
  tsIso.textContent = d.toISOString();
  tsResult.hidden = false;
});

// Date → Timestamp
dateToTsBtn.addEventListener('click', () => {
  const d = new Date(dateInput.value);
  if (isNaN(d.getTime())) return;
  const ms = d.getTime();
  dateSeconds.textContent = Math.floor(ms / 1000).toString();
  dateMs.textContent = ms.toString();
  dateResult.hidden = false;
});

// Copy helpers
async function copyWithFeedback(btn, text) {
  await navigator.clipboard.writeText(text);
  const original = btn.textContent;
  btn.textContent = 'Copied!';
  setTimeout(() => btn.textContent = original, 1000);
}

copyCurrentBtn.addEventListener('click', () => {
  copyWithFeedback(copyCurrentBtn, currentTs.textContent || '');
});

document.querySelectorAll('.copy-btn[data-target]').forEach(btn => {
  btn.addEventListener('click', () => {
    const target = document.getElementById(btn.getAttribute('data-target'));
    if (target && target.textContent) copyWithFeedback(btn, target.textContent);
  });
});
</script>
