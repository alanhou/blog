---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const tools = await getCollection('tools');
---
<Layout title="Tools">
<h1>Tools / 工具</h1>
<p>Useful AI and development tools.</p>
<div class="tools-grid">
  {tools.length > 0 ? tools.map(tool => (
    <a href={tool.data.url} target="_blank" class="tool-card">
      <h3>{tool.data.title?.en || tool.data.title?.zh}</h3>
      <p>{tool.data.description?.en || tool.data.description?.zh}</p>
      <span class="pricing">{tool.data.pricing}</span>
    </a>
  )) : (
    <p>Coming soon... 敬请期待...</p>
  )}
</div>
</Layout>

<style>
.tools-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-top: 2rem;
}
.tool-card {
  padding: 1.5rem;
  border: 1px solid var(--border);
  border-radius: 8px;
  text-decoration: none;
  color: var(--text);
  transition: border-color 0.2s;
}
.tool-card:hover {
  border-color: var(--primary);
}
.tool-card h3 {
  color: var(--primary);
  margin-bottom: 0.5rem;
}
.pricing {
  display: inline-block;
  padding: 0.25rem 0.5rem;
  background: var(--bg-secondary);
  border-radius: 4px;
  font-size: 0.8rem;
  margin-top: 0.5rem;
}
</style>
