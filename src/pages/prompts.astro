---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const prompts = await getCollection('prompts');
---
<Layout title="Prompts">
<h1>Prompts / 提示词</h1>
<p>A collection of useful AI prompts for various tasks.</p>
<div class="prompts-grid">
  {prompts.length > 0 ? prompts.map(prompt => (
    <div class="prompt-card">
      <h3>{prompt.data.title?.en || prompt.data.title?.zh}</h3>
      <p>{prompt.data.description?.en || prompt.data.description?.zh}</p>
      <span class="tag">{prompt.data.category}</span>
    </div>
  )) : (
    <p>Coming soon... 敬请期待...</p>
  )}
</div>
</Layout>

<style>
.prompts-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-top: 2rem;
}
.prompt-card {
  padding: 1.5rem;
  border: 1px solid var(--border);
  border-radius: 8px;
  transition: border-color 0.2s;
}
.prompt-card:hover {
  border-color: var(--primary);
}
.prompt-card h3 {
  color: var(--primary);
  margin-bottom: 0.5rem;
}
.tag {
  display: inline-block;
  padding: 0.25rem 0.5rem;
  background: var(--primary);
  color: white;
  border-radius: 4px;
  font-size: 0.8rem;
  margin-top: 0.5rem;
}
</style>
