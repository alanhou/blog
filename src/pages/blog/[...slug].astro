---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BilingualContent from '../../components/BilingualContent.astro';
import Comments from '../../components/Comments.astro';
import SeriesNav from '../../components/SeriesNav.astro';
import ViewCounter from '../../components/ViewCounter.astro';
import ShareButtons from '../../components/ShareButtons.astro';

export async function getStaticPaths() {
const posts = await getCollection('blog');
return posts.map(post => ({
  params: { slug: post.slug },
  props: { post },
}));
}

const { post } = Astro.props;
const { Content } = await post.render();
const titleEn = post.data.title.en || '';
const titleZh = post.data.title.zh || '';
const title = titleEn && titleZh ? `${titleEn} / ${titleZh}` : titleEn || titleZh || 'Blog Post';
const description = post.data.description?.en || post.data.description?.zh || '';
const image = post.data.image;
const hasSeries = post.data.series && post.data.seriesOrder;
const tags = post.data.tags || [];
const postURL = `https://alanhou.org/blog/${post.slug}/`;
---
<Layout title={title} description={description || undefined} image={image} type="article">
<article class="blog-post">
  <header class="post-header">
    <h1 class="post-title">{post.data.title.en}</h1>
    {post.data.title.zh && <h2 class="post-title-zh">{post.data.title.zh}</h2>}
    <div class="post-meta">
      <time datetime={post.data.date.toISOString()}>
        {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
      <ViewCounter path={`/blog/${post.slug}`} />
      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </header>

  {hasSeries && (
    <SeriesNav
      currentSlug={post.slug}
      series={post.data.series}
      seriesOrder={post.data.seriesOrder}
    />
  )}

  <div class="post-content">
    <BilingualContent>
      <Content />
    </BilingualContent>
  </div>

  <ShareButtons url={postURL} title={title} />
</article>

{hasSeries && (
  <SeriesNav
    currentSlug={post.slug}
    series={post.data.series}
    seriesOrder={post.data.seriesOrder}
  />
)}

<nav class="post-nav">
  <a href="/blog" class="back-link">‚Üê Back to Blog</a>
</nav>

<Comments />
</Layout>

<style>
.blog-post {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem 0;
}

.post-header {
  margin-bottom: 2rem;
  padding-bottom: 1.5rem;
  border-bottom: 1px solid var(--border);
}

.post-title {
  font-size: 2.25rem;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 0.5rem;
  color: var(--text);
}

.post-title-zh {
  font-size: 1.5rem;
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: 1rem;
}

.post-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 1rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.post-meta time {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.post-meta time::before {
  content: 'üìÖ';
  font-size: 1rem;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: var(--bg-secondary);
  color: var(--text-secondary);
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.8rem;
  transition: all 0.2s;
}

.tag:hover {
  background: var(--primary);
  color: white;
}

.post-content {
  font-size: 1.05rem;
  line-height: 1.75;
}

/* Prose styling for content */
.post-content :global(h2) {
  font-size: 1.75rem;
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--primary);
}

.post-content :global(h3) {
  font-size: 1.35rem;
  margin-top: 2rem;
  margin-bottom: 0.75rem;
  color: var(--text);
}

.post-content :global(h4) {
  font-size: 1.15rem;
  margin-top: 1.5rem;
  margin-bottom: 0.5rem;
}

.post-content :global(p) {
  margin-bottom: 1.25rem;
}

.post-content :global(ul),
.post-content :global(ol) {
  margin-bottom: 1.25rem;
  padding-left: 1.5rem;
}

.post-content :global(li) {
  margin-bottom: 0.5rem;
}

.post-content :global(li > ul),
.post-content :global(li > ol) {
  margin-top: 0.5rem;
  margin-bottom: 0;
}

.post-content :global(blockquote) {
  border-left: 4px solid var(--primary);
  padding: 1rem 1.5rem;
  margin: 1.5rem 0;
  background: var(--bg-secondary);
  border-radius: 0 8px 8px 0;
  font-style: italic;
}

.post-content :global(blockquote p:last-child) {
  margin-bottom: 0;
}

.post-content :global(pre) {
  margin: 1.5rem 0;
  border-radius: 8px;
}

.post-content :global(img) {
  border-radius: 8px;
  margin: 1.5rem 0;
}

.post-content :global(hr) {
  border: none;
  border-top: 1px solid var(--border);
  margin: 2rem 0;
}

.post-content :global(table) {
  width: 100%;
  border-collapse: collapse;
  margin: 1.5rem 0;
}

.post-content :global(th),
.post-content :global(td) {
  border: 1px solid var(--border);
  padding: 0.75rem;
  text-align: left;
}

.post-content :global(th) {
  background: var(--bg-secondary);
  font-weight: 600;
}

.post-content :global(strong) {
  font-weight: 600;
  color: var(--text);
}

.post-nav {
  max-width: 900px;
  margin: 2rem auto;
  padding-top: 1.5rem;
  border-top: 1px solid var(--border);
}

.back-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--primary);
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
}

.back-link:hover {
  color: var(--primary-dark);
}

@media (max-width: 768px) {
  .blog-post {
    padding: 1rem 0;
  }

  .post-title {
    font-size: 1.75rem;
  }

  .post-title-zh {
    font-size: 1.25rem;
  }

  .post-content {
    font-size: 1rem;
  }

  .post-content :global(h2) {
    font-size: 1.5rem;
  }

  .post-content :global(h3) {
    font-size: 1.25rem;
  }
}
</style>
