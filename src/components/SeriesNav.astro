---
import { getCollection } from 'astro:content';

interface Props {
  currentSlug: string;
  series: string;
  seriesOrder: number;
}

const { currentSlug, series, seriesOrder } = Astro.props;

// Get all posts in this series
const allPosts = await getCollection('blog');
const seriesPosts = allPosts
  .filter(post => post.data.series === series)
  .sort((a, b) => (a.data.seriesOrder || 0) - (b.data.seriesOrder || 0));

const currentIndex = seriesPosts.findIndex(post => post.slug === currentSlug);
const prevPost = currentIndex > 0 ? seriesPosts[currentIndex - 1] : null;
const nextPost = currentIndex < seriesPosts.length - 1 ? seriesPosts[currentIndex + 1] : null;

// Series display names
const seriesNames: Record<string, { en: string; zh: string }> = {
  'hungyi-ml2025': {
    en: 'Hung-yi Lee ML 2025',
    zh: '李宏毅机器学习2025'
  },
  'karpathy-llm': {
    en: 'Andrej Karpathy LLM Notes',
    zh: 'Andrej Karpathy LLM笔记'
  },
  'nobel-economics': {
    en: 'Nobel Prize in Economics (1969–2025)',
    zh: '诺贝尔经济学奖（1969–2025）'
  },
  'odoo12-cookbook': {
    en: 'Odoo 12 Development Cookbook',
    zh: 'Odoo 12开发者指南（Cookbook）第三版'
  },
  'odoo14-cookbook': {
    en: 'Odoo 14 Development Cookbook',
    zh: 'Odoo 14开发者指南（Cookbook）第四版'
  }
};

const seriesName = seriesNames[series] || { en: series, zh: series };
---

<nav class="series-nav">
  <div class="series-header">
    <span class="series-label">Series</span>
    <span class="series-name">{seriesName.en} / {seriesName.zh}</span>
    <span class="series-progress">{seriesOrder} / {seriesPosts.length}</span>
  </div>

  <div class="series-links">
    {prevPost ? (
      <a href={`/blog/${prevPost.slug}`} class="series-link prev">
        <span class="arrow">←</span>
        <span class="link-text">
          <span class="link-label">Previous</span>
          <span class="link-title">{prevPost.data.title.en || prevPost.data.title.zh}</span>
        </span>
      </a>
    ) : (
      <div class="series-link disabled"></div>
    )}

    {nextPost ? (
      <a href={`/blog/${nextPost.slug}`} class="series-link next">
        <span class="link-text">
          <span class="link-label">Next</span>
          <span class="link-title">{nextPost.data.title.en || nextPost.data.title.zh}</span>
        </span>
        <span class="arrow">→</span>
      </a>
    ) : (
      <div class="series-link disabled"></div>
    )}
  </div>

  <details class="series-toc">
    <summary>All posts in this series</summary>
    <ol>
      {seriesPosts.map((post, index) => (
        <li class={post.slug === currentSlug ? 'current' : ''}>
          {post.slug === currentSlug ? (
            <span>{post.data.title.en || post.data.title.zh}</span>
          ) : (
            <a href={`/blog/${post.slug}`}>{post.data.title.en || post.data.title.zh}</a>
          )}
        </li>
      ))}
    </ol>
  </details>
</nav>

<style>
.series-nav {
  margin: 2rem 0;
  padding: 1.5rem;
  background: var(--bg-secondary);
  border-radius: 8px;
  border: 1px solid var(--border);
}

.series-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1rem;
  flex-wrap: wrap;
}

.series-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-muted);
  background: var(--primary);
  color: white;
  padding: 0.2rem 0.5rem;
  border-radius: 4px;
}

.series-name {
  font-weight: 600;
  color: var(--text);
}

.series-progress {
  margin-left: auto;
  font-size: 0.875rem;
  color: var(--text-muted);
}

.series-links {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1rem;
}

.series-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem;
  background: var(--bg);
  border-radius: 6px;
  text-decoration: none;
  color: var(--text);
  transition: all 0.2s;
  border: 1px solid var(--border);
  min-width: 0;
  overflow: hidden;
}

.series-link:hover:not(.disabled) {
  border-color: var(--primary);
  background: var(--bg-secondary);
}

.series-link.disabled {
  visibility: hidden;
}

.series-link.next {
  text-align: right;
  justify-content: flex-end;
}

.series-link .arrow {
  font-size: 1.25rem;
  color: var(--primary);
}

.link-text {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  min-width: 0;
}

.link-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-muted);
}

.link-title {
  font-size: 0.875rem;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.series-toc {
  border-top: 1px solid var(--border);
  padding-top: 1rem;
}

.series-toc summary {
  cursor: pointer;
  font-size: 0.875rem;
  color: var(--text-muted);
  user-select: none;
}

.series-toc summary:hover {
  color: var(--primary);
}

.series-toc ol {
  margin: 1rem 0 0 0;
  padding-left: 1.5rem;
}

.series-toc li {
  margin: 0.5rem 0;
  font-size: 0.875rem;
}

.series-toc li.current {
  font-weight: 600;
  color: var(--primary);
}

.series-toc li a {
  color: var(--text);
  text-decoration: none;
}

.series-toc li a:hover {
  color: var(--primary);
}

@media (max-width: 640px) {
  .series-links {
    grid-template-columns: 1fr;
  }

  .series-link.disabled {
    display: none;
  }

  .series-link.next {
    text-align: left;
    justify-content: flex-start;
  }
}
</style>
