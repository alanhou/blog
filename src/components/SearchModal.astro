<div id="search-modal" class="search-modal">
  <div class="search-modal-backdrop"></div>
  <div class="search-modal-content">
    <div class="search-modal-header">
      <input type="text" id="modal-search-input" placeholder="Search posts... 搜索文章..." autocomplete="off" />
      <button id="close-search" class="close-search" aria-label="Close search">✕</button>
    </div>
    <div id="modal-search-results" class="search-results"></div>
    <div class="search-hint">
      <span>Press <kbd>ESC</kbd> to close</span>
      <span>Press <kbd>⌘K</kbd> or <kbd>Ctrl+K</kbd> to open</span>
    </div>
  </div>
</div>

<style>
.search-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}
.search-modal.open {
  display: block;
}
.search-modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}
.search-modal-content {
  position: relative;
  max-width: 600px;
  margin: 10vh auto;
  background: var(--bg);
  border-radius: 12px;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  overflow: hidden;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}
.search-modal-header {
  display: flex;
  align-items: center;
  padding: 1rem;
  border-bottom: 1px solid var(--border);
  gap: 0.5rem;
}
#modal-search-input {
  flex: 1;
  padding: 0.75rem 1rem;
  font-size: 1.1rem;
  border: none;
  background: transparent;
  color: var(--text);
  outline: none;
}
#modal-search-input::placeholder {
  color: var(--text-secondary);
}
.close-search {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: var(--text-secondary);
  padding: 0.5rem;
  border-radius: 4px;
}
.close-search:hover {
  background: var(--bg-secondary);
  color: var(--text);
}
.search-results {
  flex: 1;
  overflow-y: auto;
  padding: 0.5rem;
}
.search-result {
  display: block;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  text-decoration: none;
  color: var(--text);
  transition: background 0.15s;
}
.search-result:hover,
.search-result.active {
  background: var(--bg-secondary);
}
.search-result h4 {
  color: var(--primary);
  margin-bottom: 0.25rem;
  font-size: 1rem;
}
.search-result p {
  font-size: 0.85rem;
  color: var(--text-secondary);
  margin: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search-result .tags {
  display: flex;
  gap: 0.5rem;
  margin-top: 0.25rem;
  flex-wrap: wrap;
}
.search-result .tag {
  font-size: 0.7rem;
  padding: 0.1rem 0.4rem;
  background: var(--primary);
  color: white;
  border-radius: 4px;
  opacity: 0.8;
}
.search-hint {
  display: flex;
  justify-content: space-between;
  padding: 0.75rem 1rem;
  border-top: 1px solid var(--border);
  font-size: 0.8rem;
  color: var(--text-secondary);
}
.search-hint kbd {
  background: var(--bg-secondary);
  padding: 0.15rem 0.4rem;
  border-radius: 4px;
  font-family: inherit;
  border: 1px solid var(--border);
}
.no-results {
  text-align: center;
  padding: 2rem;
  color: var(--text-secondary);
}
@media (max-width: 768px) {
  .search-modal-content {
    margin: 5vh 1rem;
    max-height: 80vh;
  }
  .search-hint {
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
  }
}
</style>

<script>
const modal = document.getElementById('search-modal');
const input = document.getElementById('modal-search-input') as HTMLInputElement;
const results = document.getElementById('modal-search-results');
const closeBtn = document.getElementById('close-search');
const backdrop = document.querySelector('.search-modal-backdrop');

let posts: any[] = [];
let activeIndex = -1;

// Load search index
fetch('/search-index.json')
  .then(r => r.json())
  .then(data => { posts = data; })
  .catch(() => { posts = []; });

// Open modal
function openSearch() {
  modal?.classList.add('open');
  input?.focus();
  document.body.style.overflow = 'hidden';
}

// Close modal
function closeSearch() {
  modal?.classList.remove('open');
  if (input) input.value = '';
  if (results) results.innerHTML = '';
  activeIndex = -1;
  document.body.style.overflow = '';
}

// Search function
function search(query: string) {
  if (!query || query.length < 2) {
    results!.innerHTML = '';
    return;
  }

  const q = query.toLowerCase();
  const matches = posts.filter(p =>
    p.title?.toLowerCase().includes(q) ||
    p.titleZh?.toLowerCase().includes(q) ||
    p.tags?.some((t: string) => t.toLowerCase().includes(q)) ||
    p.content?.toLowerCase().includes(q)
  ).slice(0, 10);

  if (matches.length === 0) {
    results!.innerHTML = '<div class="no-results">No results found / 未找到结果</div>';
    return;
  }

  results!.innerHTML = matches.map((p, i) => `
    <a href="${p.url}" class="search-result${i === 0 ? ' active' : ''}" data-index="${i}">
      <h4>${p.title || p.titleZh}</h4>
      <p>${p.excerpt || ''}</p>
      ${p.tags?.length ? `<div class="tags">${p.tags.slice(0, 3).map((t: string) => `<span class="tag">${t}</span>`).join('')}</div>` : ''}
    </a>
  `).join('');

  activeIndex = 0;
}

// Update active result
function updateActive(newIndex: number) {
  const items = results?.querySelectorAll('.search-result');
  if (!items?.length) return;

  items.forEach((item, i) => {
    item.classList.toggle('active', i === newIndex);
  });
  activeIndex = newIndex;

  // Scroll into view
  items[newIndex]?.scrollIntoView({ block: 'nearest' });
}

// Event listeners
input?.addEventListener('input', () => search(input.value));

closeBtn?.addEventListener('click', closeSearch);
backdrop?.addEventListener('click', closeSearch);

// Keyboard navigation
document.addEventListener('keydown', (e) => {
  // Open with Cmd/Ctrl + K
  if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
    e.preventDefault();
    if (modal?.classList.contains('open')) {
      closeSearch();
    } else {
      openSearch();
    }
    return;
  }

  // Only handle these when modal is open
  if (!modal?.classList.contains('open')) return;

  if (e.key === 'Escape') {
    closeSearch();
    return;
  }

  const items = results?.querySelectorAll('.search-result');
  if (!items?.length) return;

  if (e.key === 'ArrowDown') {
    e.preventDefault();
    updateActive((activeIndex + 1) % items.length);
  } else if (e.key === 'ArrowUp') {
    e.preventDefault();
    updateActive((activeIndex - 1 + items.length) % items.length);
  } else if (e.key === 'Enter' && activeIndex >= 0) {
    e.preventDefault();
    const activeItem = items[activeIndex] as HTMLAnchorElement;
    if (activeItem?.href) {
      window.location.href = activeItem.href;
    }
  }
});

// Expose openSearch globally for header button
(window as any).openSearch = openSearch;
</script>
